<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <Page.actionBar>
		<ActionBar title="Double Tap"/>
	</Page.actionBar>

    <StackLayout>
        <Label class="h3 p-15" text="Apply double tap gesture inside the box"/>
        <GridLayout class="bg-primary p-15 m-15" width="200" height="200" doubleTap="onDoubleTap">
            <Image class="img-rounded" src="res://icon" stretch="none"/>
        </GridLayout>
    </StackLayout>
</Page>