<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <Page.actionBar>
        <ActionBar title="Styling" icon="" />
    </Page.actionBar>
    <GridLayout rows="*, *">
        <StackLayout row="0" verticalAlignment="middle">
            <!-- >> activity-indicator-styling -->
            <ActivityIndicator id="myIndicator"
                               busy="{{ isLoading }}"
                               backgroundColor="lightgray"
                               borderRadius="50"
                               color="orangered" 
                               width="100" 
                               height="100"/>
            <!-- << activity-indicator-styling -->
        </StackLayout>
        <Label row="1" text="{{ snippet }}" textWrap="true" class="snippet"/>
    </GridLayout>
</Page>